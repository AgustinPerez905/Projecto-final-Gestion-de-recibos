<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gestion_de_recibos.projectofinal.VerRecibosController">
   <children>
      <Label alignment="CENTER" text="Recibos">
         <font>
            <Font name="System Bold Italic" size="19.0" />
         </font>
      </Label>
      <TableView fx:id="tb_tableview" editable="true" onMouseClicked="#habilitarbotones" prefHeight="352.0" prefWidth="820.0">
        <columns>
          <TableColumn fx:id="tc_monto" text="monto" />
          <TableColumn fx:id="tc_descripcion" prefWidth="130.0" text="descripcion" />
            <TableColumn fx:id="tc_tipo" prefWidth="56.0" text="tipo" />
            <TableColumn fx:id="tc_fecha" prefWidth="56.0" text="fecha" />
            <TableColumn fx:id="tc_fechaVencimiento" prefWidth="130.0" text="fecha de vencimiento" />
            <TableColumn fx:id="tc_numeroRut" prefWidth="73.00006103515625" text="numero rut" />
            <TableColumn fx:id="tc_moneda" prefWidth="54.33331298828125" text="moneda" />
            <TableColumn fx:id="tc_iva" prefWidth="38.33331298828125" text="iva" />
            <TableColumn fx:id="tc_subtotal" prefWidth="103.0" text="subtotal" />
            <TableColumn fx:id="tc_debitoTarjeta" prefWidth="95.0" text="debito tarjeta" />
        </columns>
      </TableView>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button fx:id="btn_modificarRecibo" disable="true" mnemonicParsing="false" onAction="#modificarRecibo" prefHeight="46.0" prefWidth="103.0" text="modificar recibo" />
            <Button fx:id="btn_borrarRecibo" disable="true" mnemonicParsing="false" onAction="#borrarRecibo" prefHeight="45.0" prefWidth="115.0" text="borrar recibo" />
            <Button fx:id="btn_cerrar" mnemonicParsing="false" onAction="#cerrar" prefHeight="49.0" prefWidth="76.0" style="-fx-background-color: #f7dcda;" text="cerrar" />
         </children>
      </HBox>
   </children>
</VBox>
