<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<VBox spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gestion_de_recibos.projectofinal.CrearUserController">
   <children>
      <Label prefHeight="28.0" prefWidth="121.0" text="Crear Usuario" underline="true">
         <font>
            <Font size="19.0" />
         </font>
      </Label>
      <TextField fx:id="txt_fullname" prefHeight="26.0" prefWidth="267.0" promptText="nombre completo" />
      <TextField fx:id="txt_username" prefHeight="26.0" prefWidth="267.0" promptText="usuario" />
      <TextField fx:id="txt_password" prefHeight="26.0" prefWidth="267.0" promptText="contraseña" />
      <PasswordField fx:id="txt_repeatPassword" prefHeight="26.0" prefWidth="267.0" promptText="repetir contraseña" />
      <HBox alignment="CENTER_RIGHT" prefHeight="38.0" prefWidth="280.0" spacing="20.0">
         <children>
            <Button fx:id="btn_salir" mnemonicParsing="false" onAction="#cerrar" prefHeight="38.0" prefWidth="59.0" style="-fx-background-color: #f7dcda;" text="cerrar" />
            <Button fx:id="btn_crearUser" defaultButton="true" mnemonicParsing="false" onAction="#crearUsuario" prefHeight="38.0" prefWidth="134.0" text="crear usuario">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
